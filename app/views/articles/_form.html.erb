<div class="container">
  <!-- Using form helper to create a form using the model object -->
  <div class="row justify-content-center">
    <div class="col-10">
      <!-- Embedding ruby to iterate an possible error -->
      <%= render 'shared/errors' %>
      <!-- -->
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local: true, data: { turbo: false }) do |form| %>
        <div class="mb-3 row">
          <%= form.label :title, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <!-- -->
        <div class="mb-3 row">
          <%= form.label :description, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <!-- -->
        <div class="form-group text-center">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <!-- -->
    <div class="text-center mt-1 mb-4">
      <%= link_to 'Cancel and return to articles', articles_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>
