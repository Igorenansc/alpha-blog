<h2 class= "text-center mt-4"><%= @article.title %></h2>
<!-- -->
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-body rounded">
        <div class="card-header fst-italic">
          By <%= @article.user.username %>
          <%= link_to gravatar_for(@article.user), user_path(@article.user.id) %>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <% if logged_in? && (@article.user == current_user || current_user.admin?)%>
            <%= link_to  "Edit", edit_article_path(@article.id), class: "btn btn-outline-primary" %>
            <%= link_to  "Delete", article_path(@article.id), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago, edited
            <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
