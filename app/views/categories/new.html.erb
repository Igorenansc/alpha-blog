<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <!-- Using form helper to create a form using the model object -->
  <div class="row justify-content-center">
    <div class="col-10">
      <!-- Calling the component that iterate a possible error -->
      <%= render 'shared/errors', obj: @category %>
      <!-- -->
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-secondary rounded", local: true, data: { turbo: false }) do |form| %>
        <div class="mb-3 row">
          <%= form.label :name, "Category name", class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <!-- -->
        <div class="form-group text-center">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <!-- -->
    <div class="text-center mt-1 mb-4">
      <%= link_to 'Cancel and return to articles', articles_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>

