<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <!-- Using form helper to create a form using the model object -->
  <div class="row justify-content-center">
    <div class="col-10">
      <!-- Calling the component that iterate a possible error -->
      <!-- -->
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-secondary rounded", local: true, data: { turbo: false }) do |form| %>
        <!-- -->
        <div class="mb-3 row">
          <%= form.label :email, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email adress" %>
          </div>
        </div>
        <!-- -->
        <div class="mb-3 row">
          <%= form.label :password, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        <!-- -->
        <div class="form-group text-center">
          <%= form.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <!-- -->
    <div class="text-center mt-1 mb-4">
      <%= link_to 'Cancel and return to bloggers', users_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>
